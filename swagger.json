{
    "openapi": "3.0.0",
    "info": {
      "title": "YEET! API",
      "version": "1.0.0",
      "description": "Full API documentation for the YEET! budget tracker."
    },
    "paths": {
      "/api/transactions": {
        "get": {
          "summary": "Retrieve all transactions",
          "responses": {
            "200": {
              "description": "A successful list of transactions from Google Sheets",
              "content": {
                "application/json": {
                  "example": [
                    {
                      "date": "2023-10-27",
                      "amount": 15.50,
                      "description": "Lunch",
                      "category": "Food"
                    }
                  ]
                }
              }
            },
            "500": {
              "description": "Internal Server Error (e.g., Google Script is down)"
            }
          }
        },
        "post": {
          "summary": "Yeet a new transaction",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "date": { "type": "string", "format": "date" },
                    "amount": { "type": "number" },
                    "description": { "type": "string" },
                    "source": { "type": "string" },
                    "category": { "type": "string" }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Transaction successfully synced!",
              "content": {
                "application/json": {
                  "example": { "status": "success", "message": "Row added" }
                }
              }
            },
            "400": {
              "description": "Bad Request (e.g., missing required fields like Amount)"
            },
            "500": {
              "description": "Server Error during sync"
            }
          }
        }
      }
    }
  }